                <label asp-for="Notice.TeamId" class="control-label"></label>
                <select asp-for="Notice.TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Notice.ProjectId" class="control-label"></label>
                <select asp-for="Notice.ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
