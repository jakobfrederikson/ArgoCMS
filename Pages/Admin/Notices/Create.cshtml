    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Notice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
