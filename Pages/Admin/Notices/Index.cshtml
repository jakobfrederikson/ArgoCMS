@page
@model ArgoCMS.Pages.Admin.Notices.IndexModel

@{
    ViewData["Title"] = "Admin/Notices";
}
<h1>Admin/Notices</h1>
<partial name="_AdminNavPartial" />

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-hover table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].OwnerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].NoticeTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].NoticeMessageContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notice[0].DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OwnerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticeMessageContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NoticeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NoticeId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NoticeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
