@page
@model ArgoCMS.Pages.Admin.Notifications.IndexModel

@{
    ViewData["Title"] = "Notifications";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Admin/Notifications</h1>
<partial name="_AdminNavPartial" />

<h1>Notifications</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].URL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].ObjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].IsRead)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notification[0].TimeStamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notification) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObjectId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NotificationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.NotificationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.NotificationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
