@page
@model ArgoCMS.Pages.Teams.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.Team.TeamName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.TeamId" />
            <div class="form-group">
                <label asp-for="Team.TeamLeaderId" class="control-label"></label>
                <select asp-for="Team.TeamLeaderId" class="form-control" asp-items="ViewBag.TeamLeaderId"></select>
                <span asp-validation-for="Team.TeamLeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.CreatedById" class="control-label"></label>
                <select asp-for="Team.CreatedById" class="form-control" asp-items="ViewBag.CreatedById"></select>
                <span asp-validation-for="Team.CreatedById" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamName" class="control-label"></label>
                <input asp-for="Team.TeamName" class="form-control" />
                <span asp-validation-for="Team.TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.TeamDescription" class="control-label"></label>
                <input asp-for="Team.TeamDescription" class="form-control" />
                <span asp-validation-for="Team.TeamDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Team.DateCreated" class="control-label"></label>
                <input asp-for="Team.DateCreated" class="form-control" />
                <span asp-validation-for="Team.DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
