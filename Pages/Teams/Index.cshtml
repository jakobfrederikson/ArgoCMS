@page
@model ArgoCMS.Pages.Teams.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h2>@Model.Team.TeamName</h2>
<div class="row">

    <div class="col-xl-4">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Team Task's (name -- assigned to)</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped table-hover table-light">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.TeamJobs[0].DueDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TeamJobs[0].JobName)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TeamJobs)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => item.DueDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.JobName)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>

    <div class="col-xl-4">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Team Members (name -- role)</h5>
            </div>
            <div class="card-body">
                @foreach (var item in Model.Team.Employees)
                {
                    <div class="row">
                        <div class="col">
                            <p><strong>@item.FullName</strong></p>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

    <div class="col-xl-4">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Team Notices</h5>
            </div>
            <div class="card-body">
                @foreach (var item in Model.TeamNotices)
                {
                    <div class="row">
                        <div class="col">
                            <div class="card mb-1">
                                <div class="card-header text-black">
                                    <h5>@item.NoticeTitle</h5>
                                    <p class="text-muted mb-0">@item.DateCreated</p>
                                </div>
                                <div class="card-body text-black">                                    
                                    <p class="mb-0">@item.NoticeMessageContent</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
