@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h1>@Model.Employee.FullName</h1>
<h4>@Model.Role</h4>
<hr />
<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Personal Email:</strong> @Model.Employee.PersonalEmail</p>
                <p><strong>Id:</strong> @Model.Employee.Id</p>
            </div>
        </div>
    </div>

    <div class="col-xl-3">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Tasks Completed</h5>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>

    <div class="col-xl-3">
        <div class="card mb-4 bg-dark_blue">
            <div class="card-header">
                <h5>Team</h5>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
